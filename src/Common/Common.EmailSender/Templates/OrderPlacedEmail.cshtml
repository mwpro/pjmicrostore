@using RazorLight
@inherits TemplatePage<Checkout.Orders.Contracts.ApiModels.OrderDetails>
@{
    Layout = "_Layout.cshtml";
}

<p>Witaj @Model.BillingAddress.FirstName!</p>
<p>Dziękujemy za zakupy w pjmicrostore. Poniżej znajdziesz szczegóły swojego zamówienia.</p>
<p>Zamówienie numer <strong>@Model.Id</strong> z dnia @Model.CreateDate</p>

<table role="presentation" border="0" cellpadding="0" cellspacing="0">
    <thead>
        <tr>
            <td>
                Produkt
            </td>
            <td align="center">
                Ilość
            </td>
            <td align="right">
                Wartość
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderLine in Model.OrderLines)
        {
            <tr>
                <td>
                    @orderLine.ProductName
                </td>
                <td align="center">
                    @orderLine.Quantity
                </td>
                <td align="right">
                    @orderLine.Value zł
                </td>
            </tr>
        }
        <tr><td>&nbsp;</td></tr>
        <tr>
            <td colspan="2" align="right">
                Przesyłka
            </td>
            <td align="right">
                @Model.Shipping.Fee zł
            </td>
        </tr>
        <tr>
            <td colspan="2" align="right">
                Płatność
            </td>
            <td align="right">
                @Model.Payment.Fee zł
            </td>
        </tr>
        <tr>
            <td colspan="2" align="right">
                Razem
            </td>
            <td align="right">
                @Model.Total zł
            </td>
        </tr>
    </tbody>
</table>

<p>
    Dane do wysyłki:<br />
    @Model.ShippingAddress.FirstName @Model.ShippingAddress.LastName<br />
    @Model.ShippingAddress.Address<br />
    @Model.ShippingAddress.City @Model.ShippingAddress.Zip<br />
</p>
<p>
    Dane rozliczeniowe:<br />
    @Model.BillingAddress.FirstName @Model.BillingAddress.LastName<br />
    @Model.BillingAddress.Address<br />
    @Model.BillingAddress.City @Model.BillingAddress.Zip<br />
</p>
