@using Identity.Contracts
@using IdentityModel
@model LoginViewModel

<div class="login-page">
    <div class="page-header">
        <h1>Logowanie</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        @if (Model.EnableLocalLogin)
        {
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Mam już konto</h3>
                    </div>
                    <div class="panel-body">

                        <form asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl" />

                            <fieldset>
                                <div class="form-group">
                                    <label asp-for="Username">Email</label>
                                    <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password">Hasło</label>
                                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                                </div>
                                @if (Model.AllowRememberLogin)
                                {
                                    <div class="form-group login-remember">
                                        <label asp-for="RememberLogin">
                                            <input asp-for="RememberLogin">
                                            <strong>Zapamiętaj mnie</strong>
                                        </label>
                                    </div>
                                }

                                <div class="form-group">
                                    <button class="btn btn-primary" name="button" value="login">Zaloguj</button>
                                    <button class="btn btn-default" name="button" value="cancel">Anuluj</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        }
        @if (@Model.Display != OidcConstants.DisplayModes.Popup && @Model.ClientId != FrontNames.FrontAdmin)
        {
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Nie masz konta?</h3>
                    </div>
                    <div class="panel-body">
                        <h4>Przejdź do <a asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">rejestracji</a></h4>
                    
                    </div>
                </div>
            </div>
        }
        

    </div>
</div>